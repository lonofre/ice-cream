// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  username      String  @unique
  passwordHash  String
  role          String
  sessions      Session[]
}

model Product {
  id            Int     @id @default(autoincrement())
  name          String  
  description   String
  image         String
  price         String
  type          String
  orders        OrderItem[]
}

model Session {
  id                Int     @id @default(autoincrement())
  receptionist      User    @relation(fields: [receptionistId], references: [id])
  receptionistId    Int
  table             Int
  location          String
  startTime         DateTime
  endTime           DateTime
  orders            Order[]
  iceCreamOrder     IceCreamOrder?
}

model Order {
  id            Int       @id @default(autoincrement())
  session       Session   @relation(fields: [sessionId], references: [id])
  sessionId     Int
  orderItems      OrderItem[]
}

model OrderItem {
  id            Int       @id @default(autoincrement())
  product       Product   @relation(fields: [productId], references: [id])
  productId     Int
  order         Order     @relation(fields: [orderId], references: [id])
  orderId       Int
  quantity      Int
  comments      String
}

model IceCreamCatalog {
  id            Int       @id @default(autoincrement())
  flavor        String    @unique
  image         String
  orders        IceCreamOrder[]
}

model IceCreamOrder {
  id            Int       @id @default(autoincrement())
  iceCreamCatalog IceCreamCatalog  @relation(fields: [iceCreamCatalogId], references: [id])
  iceCreamCatalogId    Int
  session       Session   @relation(fields: [sessionId], references: [id])
  sessionId     Int       @unique
}